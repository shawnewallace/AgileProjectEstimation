@using AgileEst.lib
@using Microsoft.Ajax.Utilities
@model AgileEst.web.Models.NewProjectViewModel

<h1>New Project</h1>
<blockquote>Enter basic information for the new project.  All information can be changed later.</blockquote>

<form class="form-horizontal" action="/project/create" method="post">
	<div class="form-group">
		<label for="Name" class="col-sm-2 control-label">Name</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="Name" name="Name" placeholder="Name" value="@Model.Name" />
		</div>
	</div>
	
	<div class="form-group">
		<label for="IncludeIterationZero" class="col-sm-2 control-label">Include Iteration 0?</label>
		<div class="col-sm-1">
			<input type="checkbox" class="form-control" id="IncludeIterationZero" name="IncludeIterationZero" placeholder="Name" checked="@Model.IncludeIterationZero" />
		</div>
	</div>
	
	<div class="form-group">
		<label for="NumberOfIterations" class="col-sm-2 control-label">Iterations</label>
		<div class="col-sm-1">
			<input type="number" class="form-control" id="NumberOfIterations" name="NumberOfIterations" placeholder="#" value="@Model.NumberOfIterations" />
		</div>
	</div>
	
	<div class="form-group">
		<label for="NumberOfWeeksInIteration" class="col-sm-2 control-label">Weeks in Iteration</label>
		<div class="col-sm-1">
			<input type="number" class="form-control" id="NumberOfWeeksInIteration" name="NumberOfWeeksInIteration" placeholder="#" value="@Model.NumberOfWeeksInIteration" />
		</div>
	</div>
	
	<div class="form-group">
		<label for="StartDate" class="col-sm-2 control-label">Start Date</label>
		<div class="col-sm-5">
			<input type="date" class="form-control" id="StartDate" name="StartDate" placeholder="##/##/####" value="@Model.StartDate.ToShortDateString()" />
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Create</button>
		</div>
	</div>
</form>

@{ return;}

